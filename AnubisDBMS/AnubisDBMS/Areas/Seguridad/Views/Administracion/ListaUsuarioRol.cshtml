@model AnubisDBMS.Infraestructure.Data.Security.ViewModels.RoleUserListViewModel
<div class="ui raised segments">
    <h4 class="ui top attached header">@Model.Nombre<div class="sub header">@Model.Descripcion</div></h4>
    <div class="ui attached segment">
        <div class="ui menu">
            <a class="item" href="@Url.Action("RegistrarUsuario", new { idRol = Model.Id })">
                Registrar Nuevo
            </a>
        </div>
        <table class="ui small celled table">
            <thead>
                <tr>
                    <th class="three wide">USUARIO</th>
                    <th class="three wide">NOMBRES</th>
                    <th class="three wide">APELLIDOS</th>
                    <th class="three wide">CELULAR</th>
                    <th class="two wide">FECHA DE CREACION</th>
                    <th class="five wide"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var usuario in Model.Usuarios)
            {
                <tr>
                    <td>@usuario.Usuario</td>
                    <td>@usuario.Nombres</td>
                    <td>@usuario.Apellidos</td>
                    <td>@usuario.FechaRegistro.ToShortDateString()</td>
                    <td>@usuario.Celular</td>
                    <td>
                        <a href="@Url.Action("EditarUsuario", "Administracion", new {id = usuario.Id})" class="ui tiny teal basic icon button">
                            <i class="edit icon"></i> Editar
                        </a>
                        <a href="@Url.Action("ReseteoManualClave", "Administracion", new {id = usuario.Id})" class="ui tiny blue basic icon button">
                            <i class="key icon"></i> Resetear Clave
                        </a>
                    </td>
                </tr>
            }
            @if (Model.Usuarios.Count == 0)
            {
                <tr>
                    <td class="center aligned" colspan="5">No existen usuarios registrados con este rol.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>