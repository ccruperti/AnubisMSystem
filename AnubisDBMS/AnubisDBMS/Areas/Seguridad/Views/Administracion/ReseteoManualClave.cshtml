@model AnubisDBMS.Infraestructure.Data.Security.ViewModels.ManualPasswordResetViewModel
@{
    ViewBag.Title = "Reseteo Manual de Clave";
}
<div class="ten wide column">
    <h1 class="ui header">@ViewBag.Title</h1>
    <div class="ui info icon message">
        <i class="info icon"></i>
        <div class="content">
            <div class="header">
                Importante
            </div>
            <p>El reseteo manual de clave inhabilita al usuario de usar los servicios web hasta que vuelva a iniciar sesion con su nueva clave.</p>
        </div>
    </div>
    @using (Html.BeginForm("ReseteoManualClave", "Administracion", FormMethod.Post, new {@class = "ui form"}))
    {
        @Html.AntiForgeryToken()
        <div class="two fields">
            <div class="field">
                @Html.LabelFor(model => model.Usuario)
                @Html.DisplayTextFor(model => model.Usuario)
            </div>
            <div class="field">
                @Html.LabelFor(model => model.Email)
                @Html.DisplayTextFor(model => model.Email)
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                @Html.LabelFor(model => model.Contrasena)
                @Html.EditorFor(model => model.Contrasena)
                @Html.ValidationMessageFor(model => model.Contrasena)
            </div>
            <div class="field">
                @Html.LabelFor(model => model.ConfirmacionContrasena)
                @Html.EditorFor(model => model.ConfirmacionContrasena)
                @Html.ValidationMessageFor(model => model.ConfirmacionContrasena)
            </div>
        </div>
        @Html.ActionLink("Regresar", "Index", null, new { @class = "ui button" })
        <button type="submit" class="ui primary icon button">
            <i class="key icon"></i> Resetear Clave
        </button>
    }
</div>