


    <div class="ui grid">
        <div class="eight wide column">

            <div class="ui raised segments">
                <div class="ui bottom attached raised menu">
                    <div class="header item">
                        Nuevo Mantenimiento
                    </div>
                    <div class="right menu">
                        <a href="#" class="item"><i class="save icon"></i>Guardar</a>
