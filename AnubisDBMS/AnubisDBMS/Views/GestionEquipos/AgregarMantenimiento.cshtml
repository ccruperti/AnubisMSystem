                    <div class="ui form">

                        <div class="sixteen wide field">
                            <label>Descripcion del Mantenimiento</label>

                            @Html.TextArea("test" , htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                        </div>
                    </div>

            </div>
        </div>
            </div>
        <div class="five wide column">

            <div class="ui raised segments">
                <div class="ui bottom attached raised menu">
                    <div class="header item">
                        Datos de contacto
                    </div>
                
                </div>
                <div class="ui compact raised segment">
                    <div class="ui tiny form">
                        <div class="two fields">
                            <div class="six wide field">
                                <div class="ui labeled input">

                                    <div class="ui label">
                                        <i class="mail icon"></i>E-mail
                                    </div>
                                    <input type="text" placeholder="">
                                </div>
                            </div>
                            <div class="six wide field">
                                <div class="ui labeled input">

                                    <div class="ui label">
                                        <i class="phone icon"></i> #Celular
                                    </div>
                                    <input type="text" placeholder="">
                                </div>
                            </div>

                    
                    </div>
                </div>
                
            </div>

        </div>
    </div>

