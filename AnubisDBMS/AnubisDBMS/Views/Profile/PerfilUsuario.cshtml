
@model AnubisDBMS.Data.ViewModels.Catalogos_viewModels.PerfilVM

<div class="row">

    <div class="ui centered card" style="display: inline-block; overflow-x: scroll;">
        <div class="image">
            <img src="~/Content/Images/perfil.png">
        </div>
        <div class="content">
            <a class="header center" style="text-align:center;">@Model.RazonSocial</a>
            <div class="ui sub dividing header"></div>


            <div class="ui label">
                <i id="lblcorreo" class="mail icon"></i>@Model.correo 

            </div>
            <div class="ui field"  >
                <i id="lblcorreo" class="">Primera Notificación:  </i>@Model.PrimeraNotificacion 

            </div>
            <div class="ui field"  >
                <i id="lblcorreo" class="">Segunda Notificación:  </i>@Model.SegundaNotificacion 

            </div>
            <div class="ui field"  >
                <i id="lblcorreo" class="">Tercera Notificación:  </i>@Model.TerceraNotificacion 

            </div>

          

            <div class="ui field"  >
                <i id="lblcorreo" class="">RUC:  </i>@Model.Ruc 

            </div>

        </div>

        <br />

        <br />
        <br /> 
        @Html.ActionLink("Edit", "EditarPerfilUsuario", null,  new { @class = "ui tiny red right floated button" })
        <div class="ui sub dividing header"></div>

        <div class="extra content">
            <a>
                <i class="tablet icon"></i>
                22 Equipos
            </a>

        </div>
    </div>



</div>
 