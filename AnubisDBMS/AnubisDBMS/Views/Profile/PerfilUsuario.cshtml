
@model AnubisDBMS.Data.ViewModels.Catalogos_viewModels.PerfilVM

<div class="row">

    <div class="ui centered card" style="display: inline-block; overflow-x: scroll;">
        <div class="image">
            <img src="~/Content/Images/perfil.png">
        </div>
        <div class="content">
            <a class="header center" style="text-align:center;">@Model.RazonSocial</a>
            <div class="ui sub dividing header"></div>
            <div class="ui form">


                <div class="field">


                    <label class="ui gray left icon label"><i class="mail icon"></i>Correo: @Model.correo</label>


                </div>

                <div class="field">
                    <label class="ui gray left icon label"><i class="user icon"></i>Razón Social: @Model.RazonSocial</label>


                </div>

                <div class="field">
                    <label class="ui gray left icon label"><i class="id card icon"></i>RUC: @Model.RazonSocial</label>

                </div>
                <h4 class="header center" style="text-align:center;">Notificación de Alertas</h4>
                <div class="ui sub dividing header"></div>
                <div class="three fields">
                    <div class="field">
                        <label class="ui yellow left icon label"><i class="warning icon"></i>1er Alerta: @Model.PrimeraNotificacion</label>

                    </div>



                    <div class="field">
                        <label class="ui yellow left icon label"><i class="warning icon"></i>2da Alerta: @Model.SegundaNotificacion</label>

                    </div>

                    <div class="field">
                        <label class="ui yellow left icon label"><i class="warning icon"></i>3ra Alerta: @Model.TerceraNotificacion</label>

                    </div>
                </div>


                 



        </div>

        <br />

        <br />
        <br /> 
            @Html.HiddenFor(x=>x.IdEmpresa)
        @Html.ActionLink("Edit", "EditarPerfilUsuario", new { idEmpresa = Model.IdEmpresa},  new { @class = "ui tiny red right floated button" })
        <div class="ui sub dividing header"></div>

        @*<div class="extra content">
            <a>
                <i class="tablet icon"></i>
                22 Equipos
            </a>

        </div>*@
    </div>



</div>
 </div>